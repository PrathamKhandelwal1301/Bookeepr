<%- include ("partials/header.ejs") %>
<div class="cont">
    <h1 class="heading h1 middle">Add Book</h1> <br>

    <form action="/add-book" method="post">

        <label for="title">Title :</label>
        <input type="text" name="title" id="title" autofocus required><br>

        <label for="dscp"> Description :</label>
        <textarea class = "long-field" name="dscp" id="dscp" cols="45" rows="10" maxlength="500" required></textarea><br>

        <label for="olid"> ISBN : </label>
        <input type="text" name="olid" id="olid" required><br>

        <label for="rdate"> Read Date :</label>
        <input type="date" name="rdate" id="rdate" required><br>

        <label for="score"> Score (Out of 10) : </label>
        <input type="text" name="score" id="score" required><br>

        <label for="link"> Amazon Link : </label>
        <input type="text" name="link" id="link" required><br>

        <label for="notes"> Notes : </label>
        <textarea class = "long-field" name="notes" id="notes" cols="45" rows="10" maxlength="5000" required></textarea><br>

        <input class = "submit" type="submit" name="submit">
    </form>
</div>

<% if(locals.error) {%>
    <script>
        alert("<%= error %>");
    </script>
<% } %>
<%- include ("partials/footer.ejs") %>